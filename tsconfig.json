{
    "version": "1.5.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "outDir": "deploy/app",
        "experimentalDecorators": true,
        "isolatedModules": false,
        "noEmitHelpers": false,
        "noResolve": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./src/lib/sequelize.d.ts",
        "./src/config/sequelizedb.ts",
        "./src/br/**/*.ts",
        "./src/lib/**/*.ts",
        "!./node_modules/**/*.ts",
        "!./deploy/node_modules/**/*.ts"
    ],
    "files": []
}
