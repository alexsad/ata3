{
    "version": "1.5.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": false,
        "sourceMap": false,
        "outDir": "deploy/app",
        "experimentalDecorators": true,
        "isolatedModules": false,
        "noEmitHelpers": true,
        "noResolve": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "!./src/br/**/view/*.ts",
        "!./node_modules/**/*.ts",
        "!./deploy/node_modules/**/*.ts",
        "./src/lib/DinRoute.d.ts",
        "./src/lib/router.d.ts",
        "./src/lib/express-middleware.d.ts",
        "./src/lib/express.d.ts",
        "./src/lib/mongodb.d.ts",
        "./src/lib/mongoose.d.ts",
        "./src/lib/node.d.ts",
        "./src/br/**/controller/*.ts",
        "./src/br/**/model/*.ts"
    ],
    "files": [
        "src/lib/DinRoute.d.ts",
        "src/lib/router.d.ts",
        "src/lib/express-middleware.d.ts",
        "src/lib/express.d.ts",
        "src/lib/mongodb.d.ts",
        "src/lib/mongoose.d.ts",
        "src/lib/node.d.ts",
        "src/br/ata/certificado/controller/Certificado.ts",
        "src/br/ata/organizacao/controller/Organizacao.ts",
        "src/br/ata/perfil/controller/Perfil.ts",
        "src/br/ata/reuniao/controller/Reuniao.ts",
        "src/br/ata/trimestre/controller/Trimestre.ts",
        "src/br/ata/usuario/controller/Usuario.ts",
        "src/br/ata/certificado/model/ICertificado.ts",
        "src/br/ata/certificado/model/certificado.ts",
        "src/br/ata/organizacao/model/IMembro.ts",
        "src/br/ata/organizacao/model/IOrganizacao.ts",
        "src/br/ata/organizacao/model/organizacao.ts",
        "src/br/ata/perfil/model/IPerfil.ts",
        "src/br/ata/perfil/model/perfil.ts",
        "src/br/ata/reuniao/model/IReuniao.ts",
        "src/br/ata/reuniao/model/reuniao.ts",
        "src/br/ata/trimestre/model/ITrimestre.ts",
        "src/br/ata/trimestre/model/trimestre.ts",
        "src/br/ata/usuario/model/IUsuario.ts",
        "src/br/ata/usuario/model/usuario.ts"
    ]
}
